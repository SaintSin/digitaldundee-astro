---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  description?: string;
  imageSrc?: ImageMetadata;
  imageAlt: string;
  href: string;
  resourceUrl?: string;
}

const { name, description, resourceUrl, imageSrc, imageAlt, href } =
  Astro.props;
import '@styles/blocks/card.css';
---

<article class="card">
  <a href={href}>
    {imageSrc && <Image src={imageSrc} alt={imageAlt} />}
    <h3>{name}</h3>
    {description && <p>{description}</p>}
    {resourceUrl && <p>{resourceUrl}</p>}
  </a>
</article>
