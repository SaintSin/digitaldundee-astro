---
// components/cards/Resoruces.astro
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  description?: string;
  imageSrc?: ImageMetadata;
  imageAlt: string;
  href: string;
  resourceUrl?: string;
}

const { name, description, resourceUrl, imageSrc, imageAlt, href } =
  Astro.props;
import '@styles/blocks/card.css';
import LogoPending from '@images/logos/360x200-logo-pending.svg';
---

<article class="card resources">
  <a href={href}>
    {imageSrc ? <Image src={imageSrc} alt={imageAlt} /> : <LogoPending />}
    <h3>{name}</h3>
    {description && <p>{description}</p>}
  </a>
</article>
