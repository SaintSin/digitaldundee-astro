---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  description?: string;
  imageSrc?: ImageMetadata;
  imageAlt: string;
  href: string;
  resourceUrl?: string;
}

const { name, description, resourceUrl, imageSrc, imageAlt, href } =
  Astro.props;
---

<article class="card">
  <a href={href} class="card__link">
    {
      imageSrc && (
        <div class="card__image">
          <Image src={imageSrc} alt={imageAlt} />
        </div>
      )
    }
    <div class="card__content">
      <h2 class="card__title">{name}</h2>
      {description && <p class="card__description">{description}</p>}
      {resourceUrl && <p class="card__url">{resourceUrl}</p>}
    </div>
  </a>
</article>
