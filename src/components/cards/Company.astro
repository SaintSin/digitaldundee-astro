---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  imageSrc?: ImageMetadata;
  imageAlt: string;
  href: string;
  companyUrl: string;
  companyId: string;
}

const { name, companyUrl, imageSrc, imageAlt, href, companyId } = Astro.props;
import '@styles/blocks/card.css';
import LogoPending from '@images/logos/360x200-logo-pending.svg';
---

<article class="card company">
  <a href={href}>
    {
      imageSrc ? (
        <Image
          src={imageSrc}
          alt={imageAlt}
          transition:name={`company-logo-${companyId}`}
        />
      ) : (
        <Image
          src={LogoPending}
          alt=""
          transition:name={`company-logo-${companyId}`}
        />
      )
    }
    <h3 class="card__title">{name}</h3>
  </a>
</article>
<style>
  .card {
    background: transparent;
    img {
      aspect-ratio: 1;
      object-fit: contain;
    }
    .card__title {
      text-transform: capitalize;
    }
  }
</style>
