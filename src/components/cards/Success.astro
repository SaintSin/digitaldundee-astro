---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import '@styles/blocks/card.css';

interface Props {
  title: string;
  excerpt: string;
  pubDate: Date;
  imageSrc: ImageMetadata;
  imageAlt: string;
  href: string;
}

const { title, excerpt, pubDate, imageSrc, imageAlt, href } = Astro.props;
---

<article class="card">
  <a href={href}>
    <Image src={imageSrc} alt={imageAlt} quality={30} />
    <h3>{title}</h3>
    <time datetime={pubDate.toISOString()}>
      {pubDate.toLocaleDateString('en-GB')}
    </time>
    <p>{excerpt}</p>
  </a>
</article>
