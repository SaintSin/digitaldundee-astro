---
// components/Hero.astro

const { title, image, alt } = Astro.props;

import { Image } from 'astro:assets';
---

<div class="hero-wrapper">
  <header class="hero">
    <Image src={image} alt={alt} />
    <h1>{title}</h1>
  </header>
</div>

<style>
  .hero-wrapper {
    padding-block-end: var(--space-xl);
  }

  .hero {
    position: relative;
    height: 300px;
    overflow: hidden;
  }

  /* Image: full width + fixed height */
  .hero img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Centering layer */
  .hero h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    margin: 0;
    color: white;
    font-size: var(--step-5);
    text-align: center;
  }
</style>
