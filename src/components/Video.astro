---
// Using YouTube embed creates performance issues
// const VIDEO_ID = '3BD5xl_HyL4';

const fadeWords = ['Create', 'Locate', 'Generate', 'Produce', 'Innovate'];
---

<div class="background-video-container">
  <div class="text-overlay">
    <h1>
      <strong>Dundee</strong><br />
      A Digital City<br />
      Where You Can<br />
      <span class="fade-word" id="fadeWord">{fadeWords[0]}</span>
    </h1>
  </div>
  <div class="video-overlay"></div>

  <video autoplay muted loop playsinline preload="auto">
    <source src="/videos/background.mp4" type="video/mp4" />
  </video>
</div>

<script define:vars={{ fadeWords }}>
  // Remove loading overlay
  setTimeout(() => {
    const overlay = document.querySelector('.video-overlay');
    if (overlay) {
      overlay.classList.add('fade-out');
      // Remove from DOM after transition completes
      setTimeout(() => overlay.remove(), 1000);
    }
  }, 500);

  // Fade text animation
  let currentIndex = 0;
  const fadeWordElement = document.getElementById('fadeWord');

  setInterval(() => {
    if (fadeWordElement) {
      fadeWordElement.classList.add('fade-out');

      setTimeout(() => {
        currentIndex = (currentIndex + 1) % fadeWords.length;
        fadeWordElement.textContent = fadeWords[currentIndex];
        fadeWordElement.classList.remove('fade-out');
      }, 1000); // Wait for fade out before changing text
    }
  }, 3000); // Change word every 3 seconds
</script>
<style>
  .background-video-container {
    /* position: fixed; */
    top: 0;
    left: 0;
    z-index: -1;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }

  video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: auto;

    /* Force video to cover entire viewport */
    min-width: 100vw;
    height: auto;
    min-height: 100vh;
    object-fit: cover;
  }

  .text-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 90vw;
    max-width: 1200px;
    color: white;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .text-overlay h1 {
    margin: 0;
    font-weight: 400;
    font-size: var(--step-6);
    line-height: 1.2;
    text-transform: uppercase;
    strong {
      font-weight: 800;
    }
  }

  .fade-word {
    display: inline-block;
    opacity: 1;
    transition: opacity 1s ease-in-out;
  }

  .fade-word.fade-out {
    opacity: 0;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 1;
    z-index: 1;
    transition: opacity 1s ease-out;
    background-color: #1c1c1c;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  .video-overlay.fade-out {
    opacity: 0;
  }
</style>
