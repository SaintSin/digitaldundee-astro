{
  "name": "astroinitial",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "node --import tsx scripts/generate-rss-images.ts",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "prettier": "exec prettier . --write",
    "clean": "rm -rf dist .astro public/rss-images",
    "type-check": "astro check",
    "test": "astro check && biome check .",
    "rss-images": "node --import tsx scripts/generate-rss-images.ts",
    "check-links": "linkinator https://digitaldundee.netlify.app --recurse --skip 'linkedin.com|twitter.com|facebook.com|youtube.com'",
    "check-links-companies": "node --import tsx scripts/check-company-links.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/netlify": "^6.6.3",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@felixicaza/astro-capo": "^1.0.1",
    "@iconify-json/ri": "^1.2.6",
    "astro": "^5.16.5",
    "astro-embed": "^0.9.2",
    "astro-icon": "^1.1.5",
    "motion": "^12.23.26",
    "node-html-parser": "^7.0.1",
    "open-props": "^1.7.17",
    "sass": "^1.96.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "jsdom": "^27.3.0",
    "linkinator": "^7.5.1",
    "node-gyp": "^12.1.0",
    "postcss-jit-props": "^1.0.16",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-css-order": "^2.1.2",
    "tsx": "^4.21.0"
  }
}
